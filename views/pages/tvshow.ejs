	<div class="justify-center flex">
		<div class="w-full max-w-6xl overflow-hidden p-4">
			<div class='reviewsection' style="background-color:#282828;">
				<div id="reviews-header" class="text-xl border-b p-4"><span class="resultcount"></span> Reviews</div>
				<template>
				<div class='flex justify-center rounded'>
					<div class='max-w-6xl w-full flex justify-start relative m-4'>				
						<!--<img class='h-10 w-10 rounded-full mr-2' src=''>-->
						<div>
							<div class='flex'>
								<b class='filmz-name'></b>
								<!--<div class='filmz-username text-gray-600 mx-2'></div>-->
							</div>
							<div class='filmz-stars' style='padding:0;'></div>
							<p class='filmz-userreview' style="color:#adadad;"></p>
							<button class='show-more text-white hidden'>Show more</button>
							<div class='absolute top-0 right-0'>
							</div>
						</div>					
					</div>
				</div>
				</template>
			</div>
		</div>
	</div>
	<form class="similar">
		<h2 class="box__title">TV Shows Similar to <%=results.title%></h2>
		<div style="display: inline">	  
	  		<% simResults.forEach(function(r) { %>
			<a href="/tvshow/" onclick="location.href=this.href+<%=r.id%>;return false">
			<img src="https://image.tmdb.org/t/p/w154/<%=r.poster_path%>" class="image"  alt="<%=r.title%>"></a>
		    <% }); %>
		</div>
	</form> 
