	  <section class="justify-center flex">
		<div class="flex w-full max-w-6xl overflow-hidden p-4">
			<div class="flex-none">
				<img src="https://image.tmdb.org/t/p/w300/<%=results.poster_path%>" id="filmz-movieposter" alt="<%=results.name%>">
			</div>
			<div class="w-full h-full justify-between p-4" style="background-color:#282828;">
			<div class="flex w-full justify-between">
				<div class="w-full max-w-2xl pb-4">
					<div class="mb-4">
					  <h2 class="text-3xl -mt-2"><b><%=results.name%></b></h2>
					  <p class="box__text" style="color:#adadad;">Release Date: <%=results.first_air_date%></p>
					  <p id="filmz-overview" class="overflow-y-auto mt-2" style="height:11rem;"><%=results.overview%></p>
					</div>
					<div class='flex flex-wrap'>
						<% results.genres.forEach(function(r) { %>
						<span class='mr-2 bg-gray-600 hover:bg-gray-700 rounded-full px-2 font-semibold text-sm leading-loose cursor-pointer'><%=r.name%></span>
						<% }); %> 
					</div>
				</div>
				<div class="w-full pl-4" style="max-width:12rem;">
					<div class="p-2" style="background-color:#383838;">
						<div><span id="filmz-rating" class="text-3xl"></span>/10</div>
						<h3 class="text-sm" style="color:#adadad;"><span class="resultcount"></span> Filmz ratings<h3>
					</div>
					<div class="p-2" style="background-color:#383838;">
						<div><span class="text-3xl"><%=results.vote_average %></span>/10</div>
						<h3 class="text-sm" style="color:#adadad;"><%=results.vote_count%> TMDB ratings</h3>
					</div>
				</div>
			</div>
			<div class='flex border-t border-gray-400 pt-4'>
					<form action="/submitrating_tv" method="post" class='w-full'>
						<b class='text-xl'>Rate this TV show</b>
						<div id='rateYo' data-rateyo-rating='0' data-rateyo-full-star='true' style="padding:0.5rem 0 0.5rem 0;"></div>
						<div id='create-rating-area' class='hidden flex items-center border-b border-blue-500 pt-2'>
							<input type='hidden' id="tvshow_id" name='tvshow_id' value=''>
							<input type='hidden' name='rating'>							
							<textarea id='review' class='review-area appearance-none bg-transparent border-none w-full leading-tight resize-none focus:outline-none p-1' placeholder='Add a review...' name='review_text' style="color:#adadad;"></textarea><br>								
						</div>
						<div class='flex justify-end items-center pt-2'>
							<div>
								<button id='cancel-review' class='hidden flex-shrink-0 border-transparent border-4 text-blue-500 hover:bg-gray-700 text-base py-1 px-4 rounded' type='button'>CANCEL</button>
								<button id='submit-review' class='hidden flex-shrink-0 bg-blue-500 hover:bg-blue-700 border-blue-500 hover:border-blue-700 text-base border-4 text-white py-1 px-4 rounded' type="submit">REVIEW</button>
							</div>
						</div>
					</form>
			</div>
			</div>
		</div>
